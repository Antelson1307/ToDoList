@model ToDoList.Models.ToDo
<h1>Create ToDo</h1>

<form method="post" asp-action="Create" asp-controller="ToDo">
    <div class="row">
        <div class="col-3">Description</div>
        <div class="col-3">
            <input asp-for="Description"/>
        </div>
    </div>
    <div class="row">
        <div class="col-3">ToDoType</div>
        <div class="col-6">
            <select asp-for="ToDoType" asp-items="@ViewBag.SelectItemToDoType"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-3">From</div>
        <div class="col-6"><input type="date" asp-for="From" /> <input asp-for="FromTime" /></div>
    </div>
    <div class="row">
        <div class="col-3">To</div>
        <div class="col-6"><input type="date" asp-for="To" /><input asp-for="ToTime" /></div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6"><input type="submit" value="Create"/></div>
    </div>
</form>